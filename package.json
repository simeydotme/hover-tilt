{
	"name": "@hover-tilt/monorepo",
	"version": "0.3.0",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/simeydotme/hover-tilt.git"
	},
	"homepage": "https://hover-tilt.simey.me",
	"author": "Simon Goellner <simey.me@gmail.com>",
	"bugs": {
		"url": "https://github.com/simeydotme/hover-tilt/issues"
	},
	"scripts": {
		"dev": "pnpm --filter './packages/*' dev",
		"dev:all": "pnpm --parallel --filter './{packages,apps}/*' dev",
		"dev:docs": "pnpm --filter './apps/docs' dev",
		"build": "pnpm --filter './packages/*' build",
		"build:all": "pnpm --filter './packages/*' build && pnpm --filter './apps/*' build",
		"build:docs": "pnpm --filter './apps/docs' build",
		"lint": "pnpm --filter './packages/*' lint",
		"lint:all": "pnpm --filter './{packages,apps}/*' lint",
		"format": "pnpm --filter './packages/*' format",
		"format:all": "pnpm --filter './{packages,apps}/*' format",
		"check": "pnpm --filter './packages/*' check",
		"check:all": "pnpm --filter './{packages,apps}/*' check",
		"publish": "pnpm --filter hover-tilt publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"prettier-plugin-astro": "0.14.1",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"svelte-preprocess",
			"workerd"
		],
		"ignoredBuiltDependencies": [
			"spawn-sync"
		]
	}
}
