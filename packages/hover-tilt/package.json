{
  "name": "hover-tilt",
  "version": "0.1.0",
  "description": "A simple, beautiful tilt & glare component, available as both a Svelte Component and Web Component",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simeydotme/hover-tilt.git"
  },
  "homepage": "https://github.com/simeydotme/hover-tilt#readme",
  "author": "Simon Goellner <simey.me@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/simeydotme/hover-tilt/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm prepack && rollup -c",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "publint": "^0.3.14",
    "rollup": "^4.53.2",
    "rollup-plugin-svelte": "^7.2.3",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-devtools-json": "^1.0.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "component",
    "ui",
    "hover",
    "tilt",
    "effect",
    "animation",
    "web-component",
    "custom-element",
    "glare",
    "shadow",
    "spring",
    "simey",
    "simeydotme"
  ]
}
